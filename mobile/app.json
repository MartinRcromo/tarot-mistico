{
  "expo": {
    "name": "Oraclia",
    "slug": "oraclia",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon-1024.png",
    "scheme": "oraclia",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B0B0F"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.tarotmistico.app",
      "buildNumber": "1",
      "icon": "./assets/images/icon-1024.png",
      "infoPlist": {
        "NSUserTrackingUsageDescription": "Esto nos permite mostrarte publicidad relevante.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0B0B0F"
      },
      "package": "com.tarotmistico.app",
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "react-native-google-mobile-ads",
        {
          "iosAppId": "ca-app-pub-1071804711955925~9582390558"
        }
      ],
      [
        "expo-tracking-transparency",
        {
          "userTrackingPermission": "Esto nos permite mostrarte publicidad relevante."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
